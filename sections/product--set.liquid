        if (anygiftButton) {
          anygiftButton.disabled = !agreementCheckbox.checked;
          // スタイルの調整
          anygiftButton.style.opacity = agreementCheckbox.checked ? '1' : '0.5';
          anygiftButton.style.cursor = agreementCheckbox.checked ? 'pointer' : 'not-allowed';
        }

        // チェックボックスのイベントリスナーが未設定の場合のみ設定
        if (!agreementCheckbox.hasListener) {
          agreementCheckbox.addEventListener('change', function() {
            if (purchaseButton) {
              purchaseButton.disabled = !this.checked;
            }
            if (anygiftButton) {
              anygiftButton.disabled = !this.checked;
              anygiftButton.style.opacity = this.checked ? '1' : '0.5';
              anygiftButton.style.cursor = this.checked ? 'pointer' : 'not-allowed';
            }
          });
          agreementCheckbox.hasListener = true;
        }
      }
    }
  });
