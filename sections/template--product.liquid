    <iframe name="hidden_iframe" id="hidden_iframe" style="display:none;"></iframe>

    <script>
      var form = document.getElementById('thebase-restock-form');
      var iframe = document.getElementById('hidden_iframe');
      var submitBtn = document.getElementById('restock-submit-btn');
      var spinner = submitBtn.querySelector('.loading-spinner');
      var buttonText = submitBtn.querySelector('.button-text');
      var submitted = false;

      form.addEventListener('submit', function (e) {
        e.preventDefault();
        submitted = true;
        spinner.style.display = 'inline-block';
        buttonText.textContent = '送信中...';
        submitBtn.disabled = true;
        form.submit();
      });

      iframe.addEventListener('load', function () {
        if (submitted) {
          setTimeout(function () {
            const message = 'ありがとうございます。<br>入荷次第ご登録のメールアドレス宛にお知らせが届きます。';
            showCustomAlert(message);
            spinner.style.display = 'none';
            buttonText.textContent = '再入荷通知メールを受け取る';
            submitBtn.disabled = false;
          }, 1000);
          submitted = false;
        }
      });

      function showCustomAlert(message) {
        var overlay = document.createElement('div');
        overlay.style.position = 'fixed';
        overlay.style.top = '0';
        overlay.style.left = '0';
        overlay.style.width = '100%';
        overlay.style.height = '100%';
        overlay.style.backgroundColor = 'rgba(0, 0, 0, 0.5)';
        overlay.style.display = 'flex';
        overlay.style.justifyContent = 'center';
        overlay.style.alignItems = 'center';
        overlay.style.zIndex = '1000';

        var modalBox = document.createElement('div');
        modalBox.style.backgroundColor = 'white';
        modalBox.style.padding = '30px';
        modalBox.style.borderRadius = '8px';
        modalBox.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.1)';
        modalBox.style.textAlign = 'center';
        modalBox.style.maxWidth = '80%';
        modalBox.style.width = '300px';

        var icon = document.createElement('div');
        icon.innerHTML = '✓';
        icon.style.color = '#7c664a';
        icon.style.fontSize = '48px';
        icon.style.marginBottom = '20px';

        var messageElement = document.createElement('p');
        messageElement.innerHTML = message;
        messageElement.style.color = '#333';
        messageElement.style.fontSize = '16px';
        messageElement.style.marginBottom = '20px';

        var okButton = document.createElement('button');
        okButton.textContent = 'OK';
        okButton.style.backgroundColor = '#7c664a';
        okButton.style.color = 'white';
        okButton.style.border = 'none';
        okButton.style.padding = '10px 20px';
        okButton.style.borderRadius = '4px';
        okButton.style.fontSize = '14px';
        okButton.style.cursor = 'pointer';
        okButton.style.transition = 'background-color 0.3s';

        okButton.addEventListener('mouseover', function () {
          this.style.backgroundColor = '#64523c';
        });

        okButton.addEventListener('mouseout', function () {
          this.style.backgroundColor = '#7c664a';
        });

        okButton.addEventListener('click', function () {
          document.body.removeChild(overlay);
        });

        modalBox.appendChild(icon);
        modalBox.appendChild(messageElement);
        modalBox.appendChild(okButton);
        overlay.appendChild(modalBox);
        document.body.appendChild(overlay);
      }
    </script>
