<article id="{{page.handle}}" class="page hentry">
	<header>
		<div class="title-bar custom-font">
			<h1 class="main-heading">{{ page.title }}</h1>
		</div>
	</header>
	<section class="entry-content">
		{% assign content = page.content | replace: '&lt;!-- acsplit --&gt;', '<!-- acsplit -->' | split: '<!-- acsplit -->' %}{% for c in content %}{% render 'product-description-slider-page' with c %}{% endfor %}
	</section>
</article>
